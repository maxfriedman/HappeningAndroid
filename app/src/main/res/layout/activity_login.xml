<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".MainActivity" android:foregroundGravity="clip_horizontal|clip_vertical|fill"
    >
    <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent">

        <VideoView android:id="@+id/videoPlayer"
                   android:layout_alignParentTop="true"
                   android:layout_alignParentBottom="true"
                   android:layout_alignParentStart="true"
                   android:layout_alignParentEnd="true"
                   android:layout_width="match_parent"
                   android:layout_height="fill_parent">
        </VideoView>

    </RelativeLayout>


        <com.facebook.login.widget.LoginButton
            android:id="@+id/btn_fb_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@color/com_facebook_blue"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Login via Facebook"
            android:textColor="@android:color/white" android:layout_gravity="center"/>





</FrameLayout>
