<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
    >
    <FrameLayout android:layout_width="wrap_content"
                 android:layout_height="wrap_content" android:layout_marginRight="10dp">

        <ImageView android:layout_width="40dp" android:layout_height="40dp"
                   android:src="@mipmap/ic_event_black_24dp"
                   android:layout_marginTop="15dp"
                   android:id="@+id/calendar"
                   android:layout_marginLeft="10dp"/>

        <com.facebook.login.widget.ProfilePictureView
            android:layout_width="81dp"
            android:layout_height="85dp"
            android:id="@+id/userImage"
            />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eventContainer"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/userText"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:text="Reminder! Event:"
            android:textStyle="bold"/>
        <ImageView android:layout_width="60dp"
                   android:layout_height="60dp"
                   android:scaleType="centerCrop"
                   android:layout_below="@+id/userText"
                   android:id="@+id/activityImage"
                   android:src="@drawable/happy_hour"

                   android:layout_marginTop="4dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/activityTitle"
            android:text="Event Text"
            android:layout_below="@+id/userText" android:layout_alignStart="@+id/activityDate"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/activityDate"
            android:text="Today's Date"
            android:layout_below="@+id/activityTitle" android:layout_toEndOf="@+id/activityImage"
            android:layout_marginStart="9dp" android:layout_marginTop="5dp"
            android:textStyle="italic"/>


    </RelativeLayout>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
    </FrameLayout>

</LinearLayout>