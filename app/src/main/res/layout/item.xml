<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:layout_width="310dp"
    android:layout_height="390dp"
    android:background="@drawable/bg_selector"
    android:clickable="true"

    >


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_gravity="center_horizontal"
                  android:orientation="vertical"
                  android:background="@drawable/bg_selector"

        >
        <FrameLayout android:layout_width="match_parent"
                     android:layout_height="175dp" android:layout_weight="0"
                     android:layout_gravity="center_horizontal"
                     android:foregroundGravity="center_horizontal"
                     android:id="@+id/photoholder"

                     android:background="@drawable/imagetop">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:id="@+id/picture"
                android:scaleType="fitXY"
                android:background="@drawable/imagetop"
                />
            <View android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_gravity="top"
                  android:background="@drawable/gradient"/>



            <TextView
                android:id="@+id/helloText"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:layout_gravity="bottom|center_horizontal"
                android:textColor = "@android:color/white"
                />
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ellipse"
                android:layout_gravity="top"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                >

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:id="@+id/hashTag"
                          android:textColor="@android:color/white"
                          android:padding="5dp"/>
            </FrameLayout>

            <FrameLayout android:layout_width="match_parent"
                         android:layout_height="40dp"
                         android:layout_gravity="bottom|center_horizontal"
                >

               <View
                    android:id="@+id/item_swipe_left_indicator"
                    android:alpha="0"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#A5F" android:layout_gravity="bottom|center_horizontal"/>

                <View
                    android:id="@+id/item_swipe_right_indicator"
                    android:alpha="0"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="left|bottom"
                    android:background="#5AF" />

                <TextView android:layout_width="wrap_content"
                          android:layout_height="40dp"
                          android:textColor="@android:color/white"
                          android:textSize="20sp"
                          android:id="@+id/swiperighttext"
                          android:text=""
                          android:layout_gravity="bottom|center_horizontal"
                          android:alpha="0"
                    />
                <TextView android:layout_width="wrap_content"
                          android:layout_height="40dp"
                          android:textColor="@android:color/white"
                          android:textSize="20sp"
                          android:id="@+id/swipelefttext"
                          android:text=""
                          android:layout_gravity="bottom|center_horizontal"
                          android:alpha="0"

                    />


            </FrameLayout>


        </FrameLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/descText"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:text="Description"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eventTime"
            android:textSize="20sp"
            android:textColor="@color/lighter_blue"
            android:layout_marginLeft="10dp" android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp" android:text="The date and time"/>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"

           >
           <ImageView
               android:layout_width="66dp"
               android:layout_height="66dp"
               android:layout_alignParentStart="true"
               android:id="@+id/calendar"
               android:src="@mipmap/ic_event_black_24dp"
               android:layout_weight="0.19" android:layout_marginLeft="50dp"
               android:layout_marginTop="5dp"/>
           <LinearLayout android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal"
                         android:layout_alignParentEnd="true" android:id="@+id/interestedClick">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/interestedParties"
                   android:text="X" android:layout_gravity="center_vertical"
                   android:layout_marginRight="15dp" android:textSize="20sp"
                   android:textColor="@color/lighter_blue" android:textStyle="bold"/>
                <ImageView android:layout_width="66dp"
                           android:layout_height="66dp"

                    android:src="@drawable/groups_tab_pressed"
                           android:layout_marginRight="50dp" android:layout_marginTop="5dp"/>

           </LinearLayout>


       </RelativeLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tickets"
            android:id="@+id/ticketButton"
            android:layout_gravity="center_horizontal" android:layout_marginTop="10dp"/>

    </LinearLayout>

</FrameLayout>